<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/bc"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="C"
                android:textSize="25dp" />


            <Button
                android:id="@+id/bop"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="("
                android:textSize="25dp" />

            <Button
                android:id="@+id/bcp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text=")"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bdiv"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="/"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/b7"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="7"
                android:textSize="25dp" />


            <Button
                android:id="@+id/b8"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="8"
                android:textSize="25dp" />

            <Button
                android:id="@+id/b9"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="9"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bmull"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="x"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/b4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="4"
                android:textSize="25dp" />


            <Button
                android:id="@+id/b5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="5"
                android:textSize="25dp" />

            <Button
                android:id="@+id/b6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="6"
                android:textSize="25dp" />

            <Button
                android:id="@+id/badd"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="+"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/b1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="1"
                android:textSize="25dp" />


            <Button
                android:id="@+id/b2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="2"
                android:textSize="25dp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="3"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bsub"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="-"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/bac"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="AC"
                android:textSize="20dp" />


            <Button
                android:id="@+id/b0"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="0"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bdec"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="."
                android:textSize="25dp" />

            <Button
                android:id="@+id/beq"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button"
                android:onClick="onClick"
                android:text="="
                android:textSize="30dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/exp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="exp"
        android:textSize="50dp"
        android:paddingLeft="15dp"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_below="@+id/exp"
        android:layout_marginBottom="11dp"
        android:text="0"
        android:textDirection="rtl"
        android:textSize="50dp"
        android:paddingRight="15dp"/>


</RelativeLayout>